@model ExemploEF.Models.Categoria

@{
    ViewData["Title"] = "Detalhes da Categoria";
}

<style>
    /* Gradiente de fundo azul */
    .bg-gradient-blue {
        background: linear-gradient(to right, #007bff, #00aaff);
        color: white;
    }

    /* Estilo para os botões */
    .btn-gradient {
        background: linear-gradient(to right, #007bff, #00aaff);
        border: none;
        color: white;
    }

        .btn-gradient:hover {
            background: linear-gradient(to right, #0056b3, #0088cc);
        }
</style>

<div class="container mt-5 bg-gradient-blue p-5 rounded">
    <h1 class="text-center">Detalhes da Categoria</h1>
    <div>
        <h4 class="text-center">Informações da Categoria</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2 text-white">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10 text-white">
                @Html.DisplayFor(model => model.Nome)
            </dd>
        </dl>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-gradient">Voltar para a lista</a>
    </div>
</div>

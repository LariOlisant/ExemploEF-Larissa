@model ExemploEF.Models.Categoria

@{
    ViewData["Title"] = "Deletar Categoria";
}

<style>
    /* Gradiente de fundo azul */
    .bg-gradient-blue {
        background: linear-gradient(to right, #007bff, #00aaff);
        color: white;
    }

    /* Estilo para os botões */
    .btn-gradient {
        background: linear-gradient(to right, #007bff, #00aaff);
        border: none;
        color: white;
    }

        .btn-gradient:hover {
            background: linear-gradient(to right, #0056b3, #0088cc);
        }

    .btn-danger-gradient {
        background: linear-gradient(to right, #dc3545, #ff5e5e);
        border: none;
        color: white;
    }

        .btn-danger-gradient:hover {
            background: linear-gradient(to right, #c82333, #ff1f1f);
        }
</style>

<div class="container mt-5 bg-gradient-blue p-5 rounded">
    <h1 class="text-center">Deletar Categoria</h1>
    <h3 class="text-center text-warning">Você tem certeza que deseja excluir isso?</h3>

    <div>
        <h4 class="text-center">Categoria</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2 text-white">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10 text-white">
                @Html.DisplayFor(model => model.Nome)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="CategoriaID" />
        <input type="submit" value="Deletar" class="btn btn-danger-gradient btn-lg" />
        <a asp-action="Index" class="btn btn-gradient btn-lg ml-2">Voltar para a lista</a>
    </form>
</div>

@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<style>
    /* Fundo azul gradiente */
    .page-background {
        background: linear-gradient(to right, #0066cc, #00b3ff); /* Gradiente azul */
        padding: 20px;
    }
</style>

<div class="page-background">
    <h1 class="text-center text-white">@ViewData["Title"]</h1>

    <div>
        <h4 class="text-white">Cliente</h4>
        <hr />
        <dl class="row text-white">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nascimento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nascimento)
            </dd>
        </dl>
    </div>

    <!-- Botão Voltar -->
    <div class="text-center">
        <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
    </div>
</div>

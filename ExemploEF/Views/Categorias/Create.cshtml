@model ExemploEF.Models.Categoria

@{
    ViewData["Title"] = "Criar Categoria";
}

<style>
    /* Gradiente de fundo azul */
    .bg-gradient-blue {
        background: linear-gradient(to right, #007bff, #00aaff);
        color: white;
    }

    /* Estilo para os botões */
    .btn-gradient {
        background: linear-gradient(to right, #007bff, #00aaff);
        border: none;
        color: white;
    }

    .btn-gradient:hover {
        background: linear-gradient(to right, #0056b3, #0088cc);
    }
</style>

<div class="container mt-5 bg-gradient-blue p-5 rounded">
    <h1 class="text-center">Criar Categoria</h1>
    <h4 class="text-center">Preencha as informações abaixo</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <label asp-for="Nome" class="control-label">Nome da Categoria</label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome da categoria" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Criar" class="btn btn-gradient btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model ExemploEF.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<style>
    /* Fundo azul gradiente */
    .page-background {
        background: linear-gradient(to right, #0066cc, #00b3ff); /* Gradiente azul */
        padding: 20px;
    }
</style>

<div class="page-background">
    <h1 class="text-center text-white">@ViewData["Title"]</h1>

    <h4 class="text-white">Produto</h4>
    <hr />
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProdutoId" />

                <!-- Campo Nome -->
                <div class="form-group">
                    <label asp-for="Nome" class="control-label text-white">Nome</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <!-- Campo Estoque -->
                <div class="form-group">
                    <label asp-for="Estoque" class="control-label text-white">Estoque</label>
                    <input asp-for="Estoque" class="form-control" />
                    <span asp-validation-for="Estoque" class="text-danger"></span>
                </div>

                <!-- Campo Categoria -->
                <div class="form-group">
                    <label asp-for="CategoriaID" class="control-label text-white">Categoria</label>
                    <select asp-for="CategoriaID" class="form-control" asp-items="ViewBag.CategoriaID"></select>
                    <span asp-validation-for="CategoriaID" class="text-danger"></span>
                </div>

                <!-- Botão Salvar -->
                <div class="form-group text-center">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <!-- Link para Voltar para a lista -->
    <div class="text-center">
        <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

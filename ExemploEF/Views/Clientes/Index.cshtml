@model IEnumerable<ExemploEF.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo Cliente</a>
</p>

<table class="table text-center border">
    <thead class="thead-dark">
        <tr>
            <th>Nome</th>
            <th>Nascimento</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Nascimento</td>
                <td class="d-flex justify-content-center">
                    <a href="@Url.Action("Edit", "Clientes", new { id = cliente.ClienteID })" class="btn btn-warning mx-1">Editar</a>
                    <a href="@Url.Action("Details", "Clientes", new { id = cliente.ClienteID })" class="btn btn-primary mx-1">Detalhes</a>
                    <a href="@Url.Action("Delete", "Clientes", new { id = cliente.ClienteID })" class="btn btn-danger mx-1">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
